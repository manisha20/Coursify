<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="salazar.coursify.SettingFrag"
    android:padding="15dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Write with responsibility, all reviews will be given along with your name."


            android:textAlignment="viewStart"
            android:textColor="#FF135961"
            />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.DON&apos;T use profanity, name-calling, derogatory terms, definitive language, (e.g., &apos;always&apos;,&apos;never&apos;,&apos;etc.&apos;)"


            android:textAlignment="viewStart"
            android:textColor="#FF135961"
            />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.Discuss the professor’s professional abilities including teaching style and ability to convey the material clearly."


            android:textAlignment="viewStart"
            android:textColor="#FF135961"
            />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.Course name must be accurate, and it doesn’t hurt to check grammar.     "

                android:textAlignment="viewStart"
                android:textColor="#FF135961"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />


</LinearLayout>
